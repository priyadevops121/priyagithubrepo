{
	"name": "ErrorRowHandlingDF",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "SalesDataCSV",
						"type": "DatasetReference"
					},
					"name": "Sales2020"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "split1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Column_1 as string,",
				"          Column_2 as string,",
				"          Column_3 as string,",
				"          Column_4 as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     limit: 100,",
				"     ignoreNoFilesFound: false) ~> Sales2020",
				"Sales2020 split(isNull(toDate(Column_1,'dd-mmm-yyyy')),",
				"     disjoint: false) ~> split1@(ErrorRows, GoodRows)"
			]
		}
	}
}